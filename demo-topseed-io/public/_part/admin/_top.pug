#appbar
	#appbar--brand(onclick='openDrawer()') &nbsp; ☰ &nbsp;
		span.mui--hidden-xs Topseed&trade; Admin Console
	ul#appbar--menu
		li
			a(href='/admin/linkblog/') Linkblog
		li
			a(href='/admin/logout/') Logout			

#sidedrawer(onclick='closeDrawer()')
	#sidedrawer--brand &nbsp; ☰ &nbsp; Topseed&trade; Admin
	.mui-divider
	ul#sidedrawer--menu
		li
			a(href='/admin/linkblog/') Linkblog
		li
			a(href='/admin/logout/') Logout
script.
	function openDrawer(px, e) {
		$('#sidedrawer').css('transform', 'translateX(201px)')
	}
	function closeDrawer(e) {
		$('#sidedrawer').css('transform', 'translateX(0px)')
	}	